Bootstrap: docker
From: ubuntu:22.04

%post
    # Install system dependencies
    apt-get update && apt-get install -y --no-install-recommends \
        wget \
        ca-certificates \
        libxrender1 \
        libgl1 \
        libxext6 \
        libsm6 \
        libx11-6 \
        libxcb1 \
        libxrandr2 \
        libxi6 \
        xz-utils \
        python3 \
        python3-pip \
        gcc \
        g++ \
        && rm -rf /var/lib/apt/lists/*

    # Download and install Blender 4.2.2
    BLENDER_VERSION=4.2.2
    wget https://download.blender.org/release/Blender4.2/blender-$BLENDER_VERSION-linux-x64.tar.xz # TODO: Get correct URL for other version of blender, see https://download.blender.org/release/Blender4.2/
    tar -xf blender-$BLENDER_VERSION-linux-x64.tar.xz
    mv blender-$BLENDER_VERSION-linux-x64 /opt/blender
    ln -s /opt/blender/blender /usr/local/bin/blender

    # Install Python libraries required by the script
    pip3 install numpy scipy

%environment
    export PATH=/usr/local/bin:$PATH
    export LANG=C.UTF-8
    export LC_ALL=C.UTF-8

%runscript
    exec blender --background --python "$@"
